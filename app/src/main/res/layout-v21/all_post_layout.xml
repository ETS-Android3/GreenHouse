<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="2dp" app:cardCornerRadius="20dp" app:cardElevation="10dp" app:cardUseCompatPadding="true">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="4dp">
        <LinearLayout android:orientation="horizontal" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="1dp" android:layout_marginRight="10dp" android:layout_marginBottom="4dp">
            <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/post_profile_image" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/profile" android:scaleType="centerCrop"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@android:color/black" android:id="@+id/post_user_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text="@string/user_name" android:layout_marginStart="10dp"/>
                <LinearLayout android:padding="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginStart="10dp">
                    <TextView android:textSize="13sp" android:textColor="@android:color/black" android:id="@+id/post_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/date"/>
                    <TextView android:textSize="13sp" android:textColor="@android:color/black" android:id="@+id/post_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/time"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView android:textSize="14sp" android:textColor="@android:color/black" android:id="@+id/post_description" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="3dp" android:text="@string/post_description"/>
        <ImageView android:id="@+id/post_image" android:layout_width="match_parent" android:layout_height="250dp" android:layout_margin="4dp" android:scaleType="centerCrop" android:adjustViewBounds="true" android:contentDescription="@string/todo"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="15dp">
            <ImageButton android:scrollbarSize="30dp" android:id="@+id/like_button" android:padding="20dp" android:layout_width="40dp" android:layout_height="match_parent" android:src="@drawable/dislike" android:contentDescription="@string/todo" android:backgroundTint="#00000000"/>
            <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@android:color/black" android:layout_gravity="center_vertical" android:id="@+id/display_no_of_likes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/_0_likes" android:layout_marginStart="8dp"/>
            <ImageButton android:id="@+id/comment_button" android:layout_width="39dp" android:layout_height="33dp" android:layout_marginLeft="30dp" android:src="@drawable/comment" android:baselineAlignBottom="false" android:contentDescription="@string/todo" android:layout_marginStart="30dp" android:backgroundTint="#00000000"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
